@rendermode InteractiveServer
@inject AssetsApi AssetsApi
@inject AssetTypesApi AssetTypesApi

<div class="modal @(_isVisible ? "d-block" : "d-none")" tabindex="-1" style="background: rgba(0,0,0,0.5)">
    <div class="modal-dialog">
        <div class="modal-content">
            <ErrorBanner Message="@_error" OnClose="ClearError" />
            <div class="modal-header">
                <h5 class="modal-title">@(_isEdit ? "Editar Item" : "Novo Item")</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>

            @if (_isVisible && _editContext != null)
            {
                <EditForm EditContext="_editContext" OnValidSubmit="HandleSave">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Nome</label>
                            <InputText @bind-Value="_model.Name" class="form-control" />
                            <ValidationMessage For="@(() => _model.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Categoria</label>
                            <InputSelect @bind-Value="_model.AssetTypeId" class="form-select">
                                <option value="0">Selecione uma categoria...</option>
                                @foreach (AssetTypeResponse type in _assetTypes)
                                {
                                    <option value="@type.Id">@type.Name</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _model.AssetTypeId)" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Número de Série</label>
                                <InputText @bind-Value="_model.SerialNumber" class="form-control" disabled="@_isEdit" />
                                <ValidationMessage For="@(() => _model.SerialNumber)" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Valor</label>
                                <InputNumber @bind-Value="_model.Value" class="form-control" />
                                <ValidationMessage For="@(() => _model.Value)" />
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="Close">Cancelar</button>
                        <button type="submit" class="btn btn-primary" disabled="@_isSubmitting">
                            @if (_isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Salvar
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnSave { get; set; }

    private CreateAssetRequest _model = new CreateAssetRequest();
    private EditContext? _editContext;
    private ValidationMessageStore? _messageStore;
    
    private List<AssetTypeResponse> _assetTypes = new List<AssetTypeResponse>();
    private bool _isVisible;
    private bool _isEdit;
    private bool _isSubmitting;
    private long? _editingAssetId;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            _assetTypes = await AssetTypesApi.GetAllAsync(CancellationToken.None);
        }
        catch (Exception ex)
        {
            Console.WriteLine(value: $"Erro ao carregar tipos: {ex.Message}");
        }
    }

    public void Show(AssetResponse? asset = null)
    {
        _isEdit = asset != null;
        _editingAssetId = asset?.Id;

        _model = asset != null 
            ? new CreateAssetRequest { 
                Name = asset.Name, 
                SerialNumber = asset.SerialNumber, 
                AssetTypeId = asset.AssetTypeId, 
                Value = asset.Value 
              } 
            : new CreateAssetRequest();

        _editContext = new EditContext(_model);
        _messageStore = new ValidationMessageStore(_editContext);
        
        _isVisible = true;
        StateHasChanged();
    }

    private void Close() 
    {
        _isVisible = false;
        _isSubmitting = false;
    }

    private void ClearError()
    {
        _error = null;
    }

    private async Task HandleSave()
    {
        _messageStore?.Clear();
        _error = null;
        _isSubmitting = true;

        try
        {
            if (_isEdit)
            {
                UpdateAssetRequest? updateReq = new UpdateAssetRequest { 
                    Name = _model.Name, 
                    AssetTypeId = _model.AssetTypeId, 
                    Value = _model.Value 
                };
                await AssetsApi.UpdateAsync(_editingAssetId!.Value, updateReq, CancellationToken.None);
            }
            else
            {
                await AssetsApi.CreateAsync(_model, CancellationToken.None);
            }

            await OnSave.InvokeAsync();
            Close();
        }
        catch (ApiException ex) when (ex.StatusCode == 400)
        {
            if (ex.ValidationErrors.Any())
            {
                foreach (KeyValuePair<string, string[]> error in ex.ValidationErrors)
                {
                    _messageStore?.Add(fieldIdentifier: new FieldIdentifier(_model, error.Key), error.Value);
                }
            }
            else
            {
                _error = ex.Message ?? "Ocorreu um erro inesperado no servidor.";
            }
            _editContext?.NotifyValidationStateChanged();
        }
        catch (Exception ex)
        {
            _error = "Ocorreu um erro inesperado no servidor.";
            Console.WriteLine(ex.Message);
        }
    }
}